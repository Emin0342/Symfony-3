{% extends 'base.html.twig' %}

{% block title %}Hello ProductsEcransController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<section class="row">
    <div class="col-12">
        <h1>Produits Ecrans</h1>
    </div>
    {% for presetProduit in presetProduits %}
        <div class="col-5 mb-3">
            <article class="card h-100">
                <div class="card-body">
                    <h2 class="card-title">{{ presetProduit.name }}</h2>
                    <p class="card-text">{{ presetProduit.description }}</p>
                    <a href="{{ path('products_details', {"slug": presetProduit.slug }) }}" class="btn btn-primary position-relative">Voir les d√©tails
                    </a>
                </div>
            </article>
        </div>
    {% endfor %}
</section>
{% endblock %}
